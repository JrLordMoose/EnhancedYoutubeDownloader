<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:EnhancedYoutubeDownloader.ViewModels.Dialogs"
             xmlns:materialIcons="clr-namespace:Material.Icons.Avalonia;assembly=Material.Icons.Avalonia"
             mc:Ignorable="d" d:DesignWidth="500" d:DesignHeight="400"
             x:Class="EnhancedYoutubeDownloader.Views.Dialogs.ErrorDialog"
             x:DataType="vm:ErrorDialogViewModel"
             MinWidth="450"
             MaxWidth="600">

    <Design.DataContext>
        <vm:ErrorDialogViewModel />
    </Design.DataContext>

    <Border Background="{DynamicResource MaterialDesignPaper}"
            CornerRadius="8"
            Padding="24">
        <Grid RowDefinitions="Auto,Auto,*,Auto">

            <!-- Header with Icon and Title -->
            <StackPanel Grid.Row="0" Orientation="Horizontal" Spacing="12" Margin="0,0,0,16">
                <materialIcons:MaterialIcon Kind="AlertCircle"
                                          Width="32" Height="32"
                                          Foreground="{DynamicResource MaterialDesignValidationErrorBrush}"/>
                <TextBlock Text="Error Occurred"
                          FontSize="19"
                          FontWeight="SemiBold"
                          VerticalAlignment="Center"/>
            </StackPanel>

            <!-- Error Message -->
            <TextBlock Grid.Row="1"
                      Text="{Binding ErrorInfo.Message}"
                      TextWrapping="Wrap"
                      Margin="0,0,0,12"/>

            <!-- Details Section -->
            <Border Grid.Row="2"
                    Background="{DynamicResource MaterialDesignCardBackground}"
                    BorderBrush="{DynamicResource MaterialDesignDivider}"
                    BorderThickness="1"
                    CornerRadius="4"
                    Padding="12"
                    Margin="0,0,0,16"
                    IsVisible="{Binding ErrorInfo.Details, Converter={x:Static ObjectConverters.IsNotNull}}">
                <StackPanel Spacing="8">
                    <!-- Expandable Header -->
                    <Button Content="Toggle Details"
                            Command="{Binding ToggleDetailsCommand}"
                            HorizontalAlignment="Left"
                            Theme="{DynamicResource MaterialOutlineButton}"/>

                    <!-- Details Content -->
                    <ScrollViewer MaxHeight="150"
                                IsVisible="{Binding IsDetailsExpanded}"
                                HorizontalScrollBarVisibility="Auto"
                                VerticalScrollBarVisibility="Auto">
                        <TextBlock Text="{Binding ErrorInfo.Details}"
                                  FontSize="12"
                                  TextWrapping="Wrap"
                                  FontFamily="Consolas,Courier New,monospace"
                                  Background="{DynamicResource MaterialDesignTextFieldBoxBackground}"
                                  Padding="8"/>
                    </ScrollViewer>

                    <!-- Error Category Badge -->
                    <Border Background="{DynamicResource MaterialDesignChipBackground}"
                            CornerRadius="12"
                            Padding="8,4"
                            HorizontalAlignment="Left">
                        <TextBlock Text="{Binding ErrorInfo.Category, StringFormat='Category: {0}'}"
                                  FontSize="12"/>
                    </Border>
                </StackPanel>
            </Border>

            <!-- Action Buttons -->
            <Grid Grid.Row="3" ColumnDefinitions="*,Auto">

                <!-- Suggested Actions -->
                <ItemsControl Grid.Column="0"
                            ItemsSource="{Binding ErrorInfo.SuggestedActions}"
                            HorizontalAlignment="Left">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <StackPanel Orientation="Horizontal" Spacing="8"/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Button Content="{Binding Text}"
                                    Command="{Binding $parent[UserControl].DataContext.ExecuteActionCommand}"
                                    CommandParameter="{Binding ActionKey}"
                                    Theme="{DynamicResource MaterialOutlineButton}"
                                    ToolTip.Tip="{Binding Description}"/>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>

                <!-- Dialog Action Buttons -->
                <StackPanel Grid.Column="1" Orientation="Horizontal" Spacing="8">
                    <Button Content="Copy Details"
                            Command="{Binding CopyErrorDetailsCommand}"
                            Theme="{DynamicResource MaterialOutlineButton}">
                        <Button.ContentTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal" Spacing="4">
                                    <materialIcons:MaterialIcon Kind="ContentCopy" Width="16" Height="16"/>
                                    <TextBlock Text="Copy" VerticalAlignment="Center"/>
                                </StackPanel>
                            </DataTemplate>
                        </Button.ContentTemplate>
                    </Button>
                    <Button Content="Close"
                            Command="{Binding CloseDialogCommand}"
                            Theme="{DynamicResource MaterialOutlineButton}"
                            IsDefault="True"/>
                </StackPanel>
            </Grid>
        </Grid>
    </Border>

</UserControl>
